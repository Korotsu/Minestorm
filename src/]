#include "Game.h"

t_screen* Game(t_screen* screen)
{
	t_object* object = game_init(screen);
	bool isGameRunning = true;
	while (isGameRunning)
	{

	}
}

t_object* Game_init(t_screen* screen)
{
	//clear the screen
	SDL_SetRenderDrawColor(screen->renderer, 0, 0, 0, 255);
	SDL_RenderClear(screen->renderer);
	//initialize struct
	t_monsters* monster = malloc(55 * sizeof(t_monster));
	t_player* player = malloc(sizeof(t_player));
	t_walls* wall = malloc(4 * sizeof(t_wall));
	t_object* object = malloc(sizeof(t_object));
	//initialize the mosnters
	for (unsigned int index = 0 ; index < 55 ; index++)
	{
		if (index<22)
		{
			monster[index]->surface_01 = IMG_Load("./media/Picture/InvaderA1.png");
			monster[index]->surface_02 = IMG_Load("./media/Picture/InvaderA2.png");	
		}
		else if (index<44)
		{
			monster[index]->surface_01 = IMG_Load("./media/Picture/InvaderA1.png");
			monster[index]->surface_02 = IMG_Load("./media/Picture/InvaderA2.png");	
		}
		else if (index>44)
		{
			monster[index]->surface_01 = IMG_Load("./media/Picture/InvaderA1.png");
			monster[index]->surface_02 = IMG_Load("./media/Picture/InvaderA2.png");
		}
	}
	//initialize the player,wall and bullet;
	player->surface = IMG_Load("./media/Picture/Ship.png");
	/*for (unsigned int index = 0 ; index < 4 ; index++)
	{	
		wall[index]->surface = IMG_Load("./media/Picture/Ship.png");
	}*/
	}
	return object;
}
	


